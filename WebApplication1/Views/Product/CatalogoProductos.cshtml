@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}


<h1>Catálogo de Productos</h1>

<nav>
    <ul>
        <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li><a asp-controller="Home" asp-action="Contact">Contacto</a></li>
        <li><a asp-controller="Product" asp-action="Add">Agregar Producto</a></li>
    </ul>
</nav>

<section id="product-list">
    <h2>Productos Disponibles</h2>
    <div class="productos-grid">
        <!-- Aquí deberías iterar sobre un modelo con la lista de productos -->
        @* Ejemplo con modelo IEnumerable<Product> llamado Model *@
        @foreach (var producto in Model)
        {
            <div class="product">
                <img src="@Url.Content($"~/images/{producto.ImageFileName}")" alt="@producto.Name" />
                <p>@producto.Name</p>
                <p>$@producto.Price</p>
            </div>
        }
    </div>
</section>

<footer>
    <p>&copy; 2025 Tienda Virtual</p>
</footer>